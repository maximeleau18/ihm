<base:BaseUserControl
    x:Class="Pokemon.UserControls.Other.Console"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:Pokemon.UserControls"
    xmlns:local="using:Pokemon.UserControls.Other"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White" BorderBrush="Black" BorderThickness="5" Margin="5">
        <TextBlock x:Name="consoleTxtB"                       
                   Grid.Row="0" Grid.Column="0"
                   Margin="5"
                   TextWrapping="Wrap"
                   Foreground="Black" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="{Binding DisplayedMessage}">            
        </TextBlock>
    </Grid>
</base:BaseUserControl>
